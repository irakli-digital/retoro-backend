# Database
DATABASE_URL=postgresql://username:password@host/database

# JWT Secrets
JWT_SECRET=your-jwt-secret-here-min-32-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here

# API Keys
RETORO_API_KEY=your-retoro-api-key-for-n8n-webhooks

# n8n Webhooks
N8N_INVOICE_WEBHOOK_URL=https://your-n8n-instance.com/webhook/invoice
N8N_ECOMMERCE_WEBHOOK_URL=https://your-n8n-instance.com/webhook/ecommerce

# Mailgun Configuration
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain.com
EMAIL_FROM=noreply@retoro.app

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple Sign In
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# Environment
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000

# Currency API
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
